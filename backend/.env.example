# ============================================
# ChainQuery AI - Backend Configuration
# ============================================

# App Configuration
PROJECT_NAME="ChainQuery AI"
API_V1_STR="/api/v1"
ENVIRONMENT="dev"  # dev, staging, production

# ============================================
# Database Configuration
# ============================================
# These settings match the docker-compose.yml PostgreSQL service

POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chainquery

# The DATABASE_URL is auto-constructed from the above values
# Format: postgresql+asyncpg://user:password@server:port/database
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chainquery

# ============================================
# AI Provider Configuration
# ============================================
# You need at least ONE of these API keys

# OpenAI (GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_KEY_HERE

# Groq (Fast inference: Llama, Mixtral)
GROQ_API_KEY=gsk_YOUR_GROQ_KEY_HERE

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_KEY_HERE

# ============================================
# LLM Model Selection
# ============================================
# Choose which model to use for query generation

# Default model (if using OpenAI)
DEFAULT_MODEL=gpt-4
# Alternative: gpt-3.5-turbo, gpt-4-turbo-preview

# Groq models (if using Groq)
# DEFAULT_MODEL=llama3-70b-8192
# DEFAULT_MODEL=mixtral-8x7b-32768

# ============================================
# Security & Authentication
# ============================================

# JWT Secret Key (generate a secure random string)
# In production, use a long random string, e.g.: openssl rand -hex 32
SECRET_KEY=your-secret-key-min-32-characters-long-change-in-production

# JWT Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# Optional: Advanced Settings
# ============================================

# Logging Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Query generation timeout (seconds)
QUERY_TIMEOUT=30

# Max query history items to return
MAX_HISTORY_ITEMS=50

# ============================================
# Development Only
# ============================================

# Auto-reload on code changes (set to false in production)
RELOAD=true

# Debug mode (set to false in production)
DEBUG=true
